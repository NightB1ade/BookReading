{
	"type": "array"
	, "title": "Book Reading"
	, "format": "tabs"
	, "uniqueItems": true
	, "items": {
		"type": "object"
		, "title": "Book"
		, "headerTemplate": "{{ self.title }}"
		, "required": [
			"title"
		]
		, "properties": {
			"title": {
				"type": "string"
				, "title": "Title"
				, "minLength": 1
			}
			, "subtitle": {
				"type": "string"
				, "title": "Subtitle"
				, "minLength": 1
			}
			, "creators": {
				"type": "array"
				, "title": "Creators"
				, "uniqueItems": true
				, "items": {
					"type": "string"
					, "title": "Creator"
					, "minLength": 1
				}
			}
			, "numPages": {
				"type": "integer"
				, "title": "No. Pages"
				, "minimum": 1
			}
			, "notes": {
				"type": "array"
				, "title": "Notes"
				, "uniqueItems": true
				, "items": {
					"type": "string"
					, "title": "Note"
					, "minLength": 1
				}
			}
			, "isbns": {
				"type": "array"
				, "title": "ISBNs"
				, "format": "table"
				, "uniqueItems": true
				, "items": {
					"type": "object"
					, "title": "ISBN"
					, "format": "grid"
					, "properties": {
						"isbn": {
							"type": "string"
							, "title": "ISBN"
							, "oneOf": [{
									"title": "Length 13"
									, "minLength": 13
									, "maxLength": 13
								}
								, {
									"title": "Length 10"
									, "minLength": 10
									, "maxLength": 10
								}
							]
						}
						, "description": {
							"type": "string"
							, "title": "Description"
						}
					}
				}
			}
			, "progress": {
				"type": "array"
				, "format": "table"
				, "title": "Progress"
				, "uniqueItems": true
				, "items": {
					"type": "object"
					, "title": "Progress"
					, "format": "grid"
					, "oneOf": [{
							"title": "Start Page, End Page"
							, "required": [
								"date"
								, "startPage"
								, "endPage"
							]
						}
						, {
							"title": "Start %, End %"
							, "required": [
								"date"
								, "startPercentage"
								, "endPercentage"
							]
						}
						, {
							"title": "Start Page, End %"
							, "required": [
								"date"
								, "startPage"
								, "endPercentage"
							]
						}
						, {
							"title": "Start %, End Page"
							, "required": [
								"date"
								, "startPercentage"
								, "endPage"
							]
						}
					]
					, "properties": {
						"date": {
							"type": "string"
							, "title": "Date"
							, "format": "date"
						}
						, "startPage": {
							"type": "integer"
							, "title": "Start Page"
							, "minimum": 1
						}
						, "startPercentage": {
							"type": "number"
							, "title": "Start Percentage"
							, "minimum": 0
							, "maximum": 1
						}
						, "endPage": {
							"type": "integer"
							, "title": "End Page"
							, "minimum": 1
						}
						, "endPercentage": {
							"type": "number"
							, "title": "End Percentage"
							, "minimum": 0
							, "maximum": 1
						}
					}
				}
			}
		}
	}
}
